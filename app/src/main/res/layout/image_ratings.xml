<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="1080px"
    android:layout_height="1080px"
    >

    <TextView
        android:id="@+id/image_ratings_title"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:maxWidth="1050px"
        android:layout_height="80px"
        android:padding="15px"
        android:textSize="32px"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="John Smith: Top 10 for Vienna 2015 ESC 1st semifinal"
        android:textColor="@color/text_color"
        android:background="@color/highlight"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="540px"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <include android:id="@+id/image_rating_1"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_2"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_3"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_4"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_5"
                layout="@layout/image_ratings_item" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="540px"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <include android:id="@+id/image_rating_6"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_7"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_8"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_9"
                layout="@layout/image_ratings_item" />
            <include android:id="@+id/image_rating_10"
                layout="@layout/image_ratings_item" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_centerVertical="true"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/image_ratings_footer"
            android:layout_toRightOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:textSize="28px"
            android:text="Building Bridges via ESC App for Android"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>